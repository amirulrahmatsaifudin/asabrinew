<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".activity.otp.OtpActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="174dp"
        android:layout_height="47dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:scaleType="fitXY"
        android:src="@drawable/logoputih" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/toolbar_bawah">

        <ImageView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/linehome" />

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/mulish"
            android:text="Continue with Phone"
            android:textColor="@color/biru"
            android:textFontWeight="500"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/textbody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/judul"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/mulish"
            android:gravity="center"
            android:text="Enter your phone number to receive a \n pin code to sign up."
            android:textColor="@color/colorTextabu"
            android:textFontWeight="400"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textbody"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <!--                <EditText-->
            <!--                    android:id="@+id/et_negara"-->
            <!--                    android:layout_width="106dp"-->
            <!--                    android:layout_height="54dp"-->
            <!--                    android:background="@drawable/edittext"-->
            <!--                    android:layout_centerHorizontal="true"-->
            <!--                    android:paddingLeft="20dp"-->

            <!--                   />-->
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="365dp"
                android:layout_height="73dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edittext"
                android:fontFamily="@font/mulish"
                android:gravity="center"
                android:text="Mobile Phone"
                android:textSize="25dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_phone2"
            android:layout_width="365dp"
            android:layout_height="73dp"
            android:layout_below="@+id/input"
            android:layout_centerHorizontal="true"
             android:layout_marginTop="40dp"
            android:background="@drawable/button"
            android:fontFamily="@font/mulish"
            android:text="Send Code"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textFontWeight="600"
            android:textSize="19dp" />


    </RelativeLayout>

</RelativeLayout>