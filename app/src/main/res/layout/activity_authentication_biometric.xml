<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".activity.AuthenticationBiometricActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="174dp"
        android:layout_height="47dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/logoputih" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/toolbar_bawah">

        <ImageView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/linehome" />

        <TextView
            android:id="@+id/judul1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="-60dp"
            android:fontFamily="@font/mulish"
            android:text="Authentication Biometric \n Face recognition"
            android:textAlignment="center"
            android:textColor="@color/biru"
            android:textFontWeight="500"
            android:textSize="28dp" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:hint="Email"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:src="@drawable/facescan" />


        <TextView
            android:id="@+id/tvcara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvinstruction"
            android:layout_centerInParent="true"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/mulish"
            android:text="1. Pastikan cahaya yang baik. \n2. Tidak menggunakan topi, \n     kacamata. aksesoris lain \n3. Dan ikuti intruksi dengan benar"
            android:textAlignment="gravity"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvinstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/mulish"
            android:text="Instruction"
            android:textColor="@color/biru"
            android:textFontWeight="500"
            android:textSize="19.6dp" />

        <Button
            android:id="@+id/btnface"
            android:layout_width="365dp"
            android:layout_height="73dp"
            android:layout_below="@+id/tvcara"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:drawableStart="@drawable/face"
            android:fontFamily="@font/mulish"
            android:padding="20dp"
            android:text="Scan My Face"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textFontWeight="600"
            android:textSize="19dp" />
    </RelativeLayout>
</RelativeLayout>