<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background1"
    tools:context=".activity.registrasi.RegistrasiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="174dp"
            android:layout_height="47dp"
            android:layout_marginTop="77dp"
            android:layout_marginBottom="190dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logoputih" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/toolbar_bawah"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/linehome" />
            <TextView
                android:id="@+id/judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/mulish"
                android:text="Create your Account"
                android:textColor="@color/biru"
                android:textFontWeight="500"
                android:textSize="28dp" />
            <EditText
                android:id="@+id/edit_text_name"
                android:layout_width="362.94dp"
                android:layout_height="55dp"
                android:layout_below="@+id/line"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="48dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/ic_pesan"
                android:drawablePadding="20dp"
                android:hint="Name"
                android:paddingLeft="18dp" />
            <EditText
                android:id="@+id/edit_text_mobile_number"
                android:layout_width="362.94dp"
                android:layout_height="55dp"
                android:layout_below="@+id/edit_text_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/ic_pesan"
                android:drawablePadding="20dp"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:paddingLeft="18dp" />
            <EditText
                android:id="@+id/edit_text_retirement_number"
                android:layout_width="362.94dp"
                android:layout_height="55dp"
                android:layout_below="@+id/edit_text_mobile_number"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/ic_pesan"
                android:drawablePadding="20dp"
                android:hint="Retirement Number"
                android:paddingLeft="18dp" />
            <EditText
                android:id="@+id/et_NIK"
                android:layout_width="362.94dp"
                android:layout_height="55dp"
                android:layout_below="@id/edit_text_retirement_number"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/ic_profile"
                android:drawablePadding="20dp"
                android:hint="NIK KTP"
                android:paddingLeft="18dp" />
            <EditText
                android:id="@+id/et_Tempat"
                android:layout_width="362.94dp"
                android:layout_height="55dp"
                android:layout_below="@+id/et_NIK"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="20dp"
                android:hint="Tempat"
                android:paddingLeft="18dp" />

            <EditText
                android:id="@+id/et_TTL"
                android:layout_width="362.94dp"
                android:layout_height="55dp"
                android:layout_below="@+id/et_Tempat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="20dp"
                android:hint="Tanggal Lahir"
                android:paddingLeft="18dp" />

            <EditText
                android:id="@+id/et_Alamat"
                android:layout_width="362.94dp"
                android:layout_height="55dp"
                android:layout_below="@+id/et_TTL"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/ic_home"
                android:drawablePadding="20dp"
                android:hint="Alamat Lahir"
                android:paddingLeft="18dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputlayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_Alamat"
                app:passwordToggleEnabled="true"
                app:hintEnabled="false"
                android:layout_marginTop="18dp"
                android:layout_centerHorizontal="true">
                <EditText
                    android:id="@+id/et_katasandi"
                    android:layout_width="362.94dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="20dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="18dp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputlayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inputlayout1"
                app:passwordToggleEnabled="true"
                app:hintEnabled="false"
                android:layout_marginTop="18dp"
                android:layout_centerHorizontal="true">
            <EditText
                android:id="@+id/et_katasandi2"
                android:layout_width="362.94dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="20dp"
                android:inputType="textPassword"
                android:hint="Re-Type Password"
                android:paddingLeft="18dp" />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btn_regist"
                android:layout_width="365dp"
                android:layout_height="73dp"
                android:layout_below="@+id/inputlayout2"
                android:layout_centerInParent="true"
                android:layout_marginTop="53dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/button"
                android:fontFamily="@font/mulish"
                android:text="Create account"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textFontWeight="600"
                android:visibility="visible"
                android:textSize="19dp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>